<!-- views/busy.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Server Unavailable</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .container {
      text-align: center;
      background-color: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }
    h1 {
      color: #e74c3c;
      font-size: 36px;
      margin-bottom: 20px;
    }
    p {
      color: #555;
      font-size: 18px;
      margin-bottom: 30px;
    }
    .retry {
      font-size: 16px;
      color: #3498db;
      cursor: pointer;
      text-decoration: none;
    }
    .retry:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Server Unavailable</h1>
    <p>Sorry, our server is currently unable to process your request. Please try again later.</p>
    <a href="/" class="retry">Go back to home page</a>
  </div>
</body>
</html>
